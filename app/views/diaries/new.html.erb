  <div class="row mt-4">
    <div class="col-md-3 col-12">
      <%= form_with model: @twitter, url: twitter_id_path, local: true do |form| %>
        <%= form.label :twitter_id, "Twitter id" %>
        <div class="form-row">
          <div class="col-8">
            <%= form.text_field :twitter_id, required: true, class: "form-control" %>
          </div>
          <div class="col-4">
            <%= form.submit "Search", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
      <div class="twitter_height">
        <a class="twitter-timeline" href=<%= @twitter_url %>>Tweets by<%= @twitter_id %></a>
        <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      </div>
    </div>
    <div class="col-md-9 col-12">
      <%= form_with model: @diary, local: true, id: "diary-form" do |form| %>
        <div class="form-group" >
          <%= form.label :title, "Diary Title" %>
          <%= form.text_field :title, required: true, class: "form-control", id: "diary-title" %>
        </div>
        <div class="form-group">
          <%= form.label :comment, "Diary Comment" %>
          <%= form.text_area :comment, required: true, class: "form-control", id: "diary-comment", rows: 25 %>
        </div>
        <div class="text-right">
          <%= form.submit "Save", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
