<div class="container-fluid px-5" style="max-width: 1920px">
  <h3 class="pt-3 text-primary col-2">Calendar</h3>
  <input type="text" id="calendar" class="initial-font mb-3" form="diary-form" name="diary[date]">
  <div class="row">
    <div class="col-md-3 col-12 former-day">
      <div class="dropdown">
        <div class="ext-dark border p-1 dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= "#{@lhob_num} day ago" %>
        </div>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <% [1,3,7,15,30,60,90,120,180,365].each do |num| %>
            <div class="dropdown-item" value="<%= num %> day ago" data-position="lhob" data-former="<%= num %>"><%= num %> day ago</div>
          <% end %>
        </div>
      </div>
      <!-- Button trigger modal -->
      <div class="text-dark border p-1" data-toggle="modal" data-target="#modal-lhob">
        <p class="prev-text former-text-lhob mb-0"><%= @lhob.comment %></p>
      </div>
      <!-- Modal -->
      <div class="modal fade bd-example-modal-lg" id="modal-lhob" tabindex="-1" role="dialog" aria-labelledby="modal-lhobTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modal-lhobTitle"><%= @lhob.title %></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body" id="former-day-comment-lhob">
              <%= @lhob.comment %>
            </div>
            <div class="modal-footer">
              <%# <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button> %>
            </div>
          </div>
        </div>
      </div>
