<div class="container-login">
  <div class="title">
    <h3><strong>Contact us</strong></h3>
  </div>
  <div class="row mt-4 text-center">
    <div class="confirm col-md-4 col-12 p-1">
      <p class="other-confirm">1.Input</p>
    </div>
    <div class="confirm col-md-4 col-12 p-1">
      <p class="current">2.Confirm</p>
    </div>
    <div class="confirm col-md-4 col-12 p-1">
      <p class="other-confirm">3.Complete</p>
    </div>
  </div>
  <p class="text-center text-white bg-info p-2 col-12">記入内容に間違いがないかご確認下さい</p>
  <div class="form-group">
    <label for="exampleInputEmail1">Last name</label>
    <input type="name" class="form-control bg-white" id="exampleInputEmail1" value="<%= @contact.last_name %>" disabled>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">First name</label>
    <input type="name" class="form-control bg-white" id="exampleInputEmail1" value="<%= @contact.first_name %>" disabled>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
    <input type="email" class="form-control bg-white" id="exampleInputEmail1" value="<%= @contact.email %>" disabled>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Inquiry</label>
    <textarea class="form-control bg-white" id="exampleInputEmail1" rows="9" disabled><%= @contact.inquiry %>
    </textarea>
  </div>
  <%= form_with model: @contact, url: contact_back_path, local: true do |form| %>
    <div class="form-group" >
      <%= form.hidden_field :last_name %>
    </div>
    <div class="form-group" >
      <%= form.hidden_field :first_name %>
    </div>
    <div class="form-group" >
      <%= form.hidden_field :email %>
    </div>
    <div class="form-group" >
      <%= form.hidden_field :inquiry %>
    </div>
    <div class="form-group" >
      <%= form.submit 'Back', class: 'btn btn-secondary' %>
    </div>
  <% end %>
  <%= form_with model: @contact, url: contacts_path, method: :post, local: true do |form| %>
    <div class="form-group" >
      <%= form.hidden_field :last_name%>
    </div>
    <div class="form-group" >
      <%= form.hidden_field :first_name %>
    </div>
    <div class="form-group" >
      <%= form.hidden_field :email %>
    </div>
    <div class="form-group" >
      <%= form.hidden_field :inquiry %>
    </div>
    <div class="form-group" >
      <%= form.submit 'Send', class: 'btn btn-primary' %>
    </div>
  <% end %>
