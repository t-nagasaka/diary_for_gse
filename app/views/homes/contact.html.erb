<div class="container-login">
  <div class="title">
    <h3><strong>お問合せフォーム</strong></h3>
  </div>
  <%= form_with url: contact_path do |f| %>
    <div class="form-group" >
      <%= f.label :"名前( 氏 )" %>
      <%= f.text_field :name, class: 'form-control mb-3', placeholder: "氏", required: true %>
    </div>
    <div class="form-group" >
      <%= f.label :"名前( 名 )" %>
      <%= f.text_field :name, class: 'form-control mb-3', placeholder: "名", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :"Eメール" %>
      <%= f.email_field :email, autocomplete: 'email', class: 'form-control', placeholder: "example@example.com", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :"お問い合わせ内容" %>
      <%= f.text_area :text, class: 'form-control', rows:15, required: true %>
    </div>
    <div class="form-group">
      <%= f.submit "送信", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>
